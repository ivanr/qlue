	<filter>
		<filter-name>WelcomeFilter</filter-name>
		<filter-class>
			com.webkreator.qlue.util.WelcomeFilter
		</filter-class>
		<init-param>
			<param-name>DEFAULT_PAGE</param-name>
			<param-value>index.html</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>WelcomeFilter</filter-name>
		<url-pattern>*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>
			com.webkreator.qlue.util.Log4jConfigListener
		</listener-class>
	</listener>	

	<servlet>
		<servlet-name>QlueServlet</servlet-name>

		<servlet-class>
			com.webkreator.qlue.example.QlueExampleServlet
		</servlet-class>

		<load-on-startup>1</load-on-startup>

		<init-param>
			<param-name>QLUE_CHARACTER_ENCODING</param-name>
			<param-value>UTF-8</param-value>
		</init-param>

		<init-param>
			<param-name>QLUE_DEVMODE_ENABLED</param-name>
			<!-- Possible values: On, Off, or OnDemand -->
			<param-value>On</param-value>
		</init-param>

		<init-param>
			<param-name>QLUE_DEVMODE_RANGES</param-name>
			<!-- One or more IP addresses separated with spaces -->
			<param-value>127.0.0.1</param-value>
		</init-param>

		<init-param>
			<param-name>QLUE_DEVMODE_PASSWORD</param-name>
			<param-value>jupiter</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>QlueServlet</servlet-name>
		<url-pattern>*.html</url-pattern>
	</servlet-mapping>

	<error-page>
		<error-code>500</error-code>
		<location>/_qlue/handleInternalServerError.html</location>
	</error-page>

	<error-page>
		<error-code>404</error-code>
		<location>/_qlue/handlePageNotFound.html</location>
	</error-page>

	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/_qlue/handleThrowable.html</location>
	</error-page>

	<session-config>
		<session-timeout>15</session-timeout>

		<tracking-mode>COOKIE</tracking-mode>

		<cookie-config>
			<!-- <secure>true</secure> -->
			<http-only>true</http-only>
		</cookie-config>
	</session-config>

</web-app>
